<!DOCTYPE html>
<html lang="en">
  <head id="masterPage" runat="server">
    <meta charset="utf-8">
    <title>This is My simple ASP.NET Site! Greetings you there!</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Test bootstrap page">
    <meta name="author" content="Sergei Korolchuk">

    <!-- Le styles -->
    <link href="@Url.Content("../../Content/bootstrap.css")" rel="stylesheet">
    <link href="@Url.Content("../../Content/bootstrap-responsive.css")" rel="stylesheet"/>
    <link href="@Url.Content("../../Styles/Main.css")" rel="stylesheet"/>
    <script src="@Url.Content("../../Scripts/jquery-1.8.3.js")"></script>
    <script src="@Url.Content("../../Scripts/bootstrap.js")"></script>
    <script src="@Url.Content("../../Scripts/modernizr-2.6.2.js")"></script>
    <script src="@Url.Content("../../Scripts/prototype.js")"></script>
    <title>@ViewBag.Title</title>
  </head>
  <body>
    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container-fluid">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <a class="brand" href="#">Dot NET Practise</a>
          <div class="btn-group pull-right">
            <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
              <i class="icon-user"></i>
              <span id="login_status">You are not loggined now</span>
              <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
              <li><input class="search-query span2" placeholder="Name" id="Name" type="text"/></li>
              <li><input class="search-query span2" placeholder="Password" id="Pass" type="password"/></li>
              <li class="divider"></li>
              <li><a id="SignInOrOut">Sign In</a></li>
            </ul>
          </div>
          <div class="nav-collapse">
            <ul class="nav">
              <li class="active"><a href="@Url.Action("Default", "Home")">Home</a></li>
              <li><a href="@Url.Action("About", "Home")">About</a></li>
              <li class="dropdown">
                <a class="dropdown-toggle"
                data-toggle="dropdown"
                href="#">
                Contacts
                <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                <a href="http://vk.com/id100429328">My Account at VK</a>
                <a href="http://www.facebook.com/sergey.korolchuk.dev">My Account at Facebook</a>
                <a href="https://github.com/SKorolchuk">My Works at GitHub</a>
                </ul>
              </li>
              <li><a href="@Url.Action("RSS", "RSS")">News Feed</a></li>
              <li><a href="@Url.Action("Chat", "Chat")">Chat</a></li>
              <li><a id="AllVisitors"></a></li>
              <li><a id="TodayVisitors"></a></li>
                <li><a id="Time"></a></li>
            </ul>
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>

      <div class="container-fluid">
          @RenderBody()
          <hr>
          <footer>
              <p> SKoRdotNET Copyright &copy; 2011-2013</p>
              <p> Powered by Twitter Bootstrap Framework &copy; 2012</p>
          </footer>
      </div><!--/.fluid-container-->
</body>
</html>