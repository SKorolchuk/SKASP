@model SKASP.DOMAIN.EntitiesModel.MessageStorage
<link rel="stylesheet" href="~/Styles/Chat.css"/>
<div class="media">
	<a class="pull-left" href="#">
		<img class="media-object" data-src="holder.js/64x64" alt="64x64" style="width: 64px; height: 64px;" src="data:image/png;base64,"/>
	</a>
	<div class="media-body">
		<h4 class="media-heading"></h4>
		@Html.HiddenFor(x => x.ID)
		<span class="label label-info span9 User" style="font-size: 18px;">User: @Html.DisplayFor(x => x.MsgOwner)</span>
		<br />
		<span class="label label-warning span9 Theme" style="font-size: 16px;">Theme: @Html.DisplayFor(x => x.Name)</span>
		<br/>
		<span class="label label-inverse span9 Content" style="font-size: 14px;">@Html.DisplayFor(x => x.Data)</span>
		<div id="message @Model.ID">
			@if (User.Identity.Name == "sergio")
			{
				 using (Html.BeginForm("RemoveMsg", "Chat", new { ID = Model.ID, MsgOwner = Model.MsgOwner.TrimEnd(), Name = Model.Name.TrimEnd(), Data = Model.Data.TrimEnd() }))
				 {
					 <input type="submit" class="btn" value="x"/>
				 }
			}
		</div>
	</div>
</div>